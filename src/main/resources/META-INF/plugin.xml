<idea-plugin>
    <id>com.intellij.zenofidea</id>
    <name>Zen-For-IDEA</name>
    <version>1.0.0</version>
    <vendor>vsmysee</vendor>

    <depends>com.intellij.modules.platform</depends>

    <application-components>
        <component>
            <implementation-class>com.intellij.ide.actions.App</implementation-class>
        </component>
    </application-components>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="ZenOfIdea" anchor="right" factoryClass="com.intellij.ide.actions.ToolWindow"/>
    </extensions>

    <actions>

        <action id="ShowSelectActions" class="com.intellij.ide.actions.ActionPop"/>
        <action id="MyModAction" class="com.intellij.ide.actions.ModAction"/>


        <action id="OH_MotionFirstLine" class="com.intellij.ide.actions.custom.MotionGotoLineFirstAction"/>
        <action id="OH_MotionLastLine" class="com.intellij.ide.actions.custom.MotionGotoLineLastAction"/>

    </actions>

</idea-plugin>
